<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1">
   <stylesheets>
      <URL value="@DarkTheme.css" />
      <URL value="@Extensions.css" />
   </stylesheets>
   <children>
      <MenuBar VBox.vgrow="NEVER">
         <menus>
            <Menu mnemonicParsing="false" text="File">
               <items>
                  <MenuItem mnemonicParsing="false" onAction="#handleExit" text="Exit" />
               </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Help">
               <items>
                  <MenuItem fx:id="helpMenuItem" mnemonicParsing="false" onAction="#handleHelp" text="Help" />
               </items>
            </Menu>
         </menus>
      </MenuBar>
      <AnchorPane fx:id="commandBoxPlaceholder" styleClass="anchor-pane-with-border" VBox.vgrow="NEVER">
         <padding>
            <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
         </padding>
      </AnchorPane>
       <AnchorPane fx:id="resultDisplayPlaceholder" maxHeight="80.0" minHeight="80.0" prefHeight="80.0" styleClass="anchor-pane-with-border" VBox.vgrow="NEVER">
           <padding>
               <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
           </padding>
       </AnchorPane>
      <AnchorPane fx:id="eventTaskListHeader" layoutX="10.0" layoutY="57.0" maxHeight="25.0" minHeight="25.0" prefHeight="25.0" styleClass="anchor-pane-with-border">
         <padding>
            <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
         </padding>
         <children>
            <Label layoutX="16.0" layoutY="2.0" styleClass="cell_small_label_header" text="Events" />
         </children>
      </AnchorPane>
      <VBox fx:id="eventTaskList" minWidth="340" prefWidth="340" styleClass="anchor-pane-with-border">
          <padding>
              <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
          </padding>
         <children>
            <AnchorPane fx:id="eventTaskListPanelPlaceholder" VBox.vgrow="ALWAYS" />
         </children>
      </VBox>
      <AnchorPane fx:id="deadlineTaskListHeader" layoutX="10.0" layoutY="137.0" maxHeight="25.0" minHeight="25.0" prefHeight="25.0" styleClass="anchor-pane-with-border">
         <padding>
            <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
         </padding>
         <children>
            <Label layoutX="16.0" layoutY="2.0" styleClass="cell_small_label_header" text="Deadlines" />
         </children>
      </AnchorPane>
      <VBox fx:id="deadlineTaskList" minWidth="340" prefWidth="340" styleClass="anchor-pane-with-border">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <children>
            <AnchorPane fx:id="deadlineTaskListPanelPlaceholder" VBox.vgrow="ALWAYS" />
         </children>
      </VBox>
      <AnchorPane fx:id="floatingTaskListHeader" layoutX="10.0" layoutY="228.0" maxHeight="25.0" minHeight="25.0" prefHeight="25.0" styleClass="anchor-pane-with-border">
         <padding>
            <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
         </padding>
         <children>
            <Label layoutX="16.0" layoutY="2.0" styleClass="cell_small_label_header" text="Basic Tasks" />
         </children>
      </AnchorPane>
      <VBox fx:id="FloatingTaskList" layoutX="10.0" layoutY="179.0" minWidth="340" prefWidth="340" styleClass="anchor-pane-with-border">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <children>
            <AnchorPane fx:id="floatingTaskListPanelPlaceholder" VBox.vgrow="ALWAYS" />
         </children>
      </VBox>
      <AnchorPane fx:id="statusbarPlaceholder" VBox.vgrow="NEVER" />
   </children>
</VBox>
